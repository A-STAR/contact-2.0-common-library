{
  "preset": "jest-preset-angular",
  "setupTestFrameworkScriptFile": "<rootDir>/jest-setup.ts",
  "moduleNameMapper": {
    "^@app/(.*)$": "<rootDir>/src/app/$1",
    "^@lib/(.*)$": "<rootDir>/projects/**/src/lib/$1"
  },
  "collectCoverageFrom": [
    "src/app/**/*.ts",
    "projects/**/src/lib/**/*.ts"
  ],
  "coverageReporters": [
    "text-summary"
  ],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "index.ts"
  ]
}
